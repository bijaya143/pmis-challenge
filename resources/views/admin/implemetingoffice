                        <?php
                        $receiverId='';
                        $notification=false;
                        $receiver='single';
                            if($project->procurement->Contractor){
                                $notification=true;
                                $receiverId=$project->procurement->Contractor->myUser->id;
                            }
                            if($project->procurement->JointVenture){
                                $receiver='multiple';
                                $notification=true;
                                foreach($project->procurement->JointVenture->contractors as $contractor){
                                    $receiverId.=$contractor->myUser->id.',';
                                }
                            }

